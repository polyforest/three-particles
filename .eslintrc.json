{
	"env": {
		"browser": true,
		"es2020": true
	},
	"parser": "@typescript-eslint/parser",
	"extends": [
		"google",
		"plugin:jsdoc/recommended"
	],
	"parserOptions": {
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": "off",
		"linebreak-style": "off",
		"padded-blocks": [
			"error",
			{
				"classes": "always",
				"switches": "never",
				"blocks": "never"
			},
			{
				"allowSingleLineBlocks": true
			}
		],
		"no-trailing-spaces": [
			"error",
			{
				"ignoreComments": true,
				"skipBlankLines": true
			}
		],
		"valid-jsdoc": "off"
	},
	"settings": {
		"jsdoc": {
			"mode": "typescript"
		}
	}
}