{
  "env": {
	"browser": true,
	"es2020": true
  },
  "extends": [
	"google"
  ],
  "parserOptions": {
	"sourceType": "module"
  },
  "rules": {
	"linebreak-style": "off",
	"indent": "off",
	"padded-blocks": [
	  "error",
	  {
		"classes": "always",
		"switches": "never",
		"blocks": "never"
	  },
	  {
		"allowSingleLineBlocks": true
	  }
	]
  }
}
